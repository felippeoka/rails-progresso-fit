<div class="container">
  <div class="col-sm-12 col-md-4">
    <div class="split left d-none d-sm-block">
      <%= image_tag "login-photo.jpg", class:"img-fluid image-test" %>
    </div>
  </div>
  <div class="split right">
    <div class="centered">
      <div class="d-flex justify-content-center">
      <br>
      <h2><span style="color:white">LOG <span style="color:red">IN</span></h2>
    </div>
    <div class="d-flex justify-content-center">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false}) do |f| %>
        <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
