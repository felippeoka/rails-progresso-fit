<div class="container text-center mt-4 mb-5">

    <div class="mx-auto" style="width: 500px;">

        <div class="card-body rounded-4 border border-secondary">
          <h5 class="card-title mt-3">Keep track of your progress!</h5>
          <h6 class="card-subtitle mt-1 mb-3">Submit your current weight</h6>
          <div class="d-flex justify-content-center" data-controller="weight-image">
            <p class="card-text">
              <%= simple_form_for [@user, @weight] do |f| %>
                <div class="row justify-content-center">
                  <div class="d-flex col-sm-6"><p class="m-2">Weight(kg):</p><%= f.input :value, input_html: { class: "input-weight" }, label: false %></div>
                </div>
                <%= f.input :photos, as: :file, input_html: { multiple: true, class: "input-photo" } %>
                <div class="custom-file-container" data-upload-id="myFirstImage"></div>
                <div class="photo-card mb-3 mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/700x600/?bodybuilder)"></div>
                <%# <% @weight.photos.each do |photo| %>
                  <%# <%= cl_image_tag photo.key, height: 400, width: 500, crop: :fill %>
                <%# <% end %>
                <%= f.submit "Deixe de ser frango!", class: "btn btn-frango-weight mt-2 mb-4" %>
              <% end %>
            </p>
          </div>
          <%# <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a> %>
        </div>

    </div>

</div>
