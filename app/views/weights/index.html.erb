<div class="container">

  <%= simple_form_for :search, url: weights_path, method: :get do |f| %>
        <div class="search-form-control form-group row">
          <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                  placeholder: "Find your previous weight",
                  as: :date %>
          <%# <%= f.input :created_at, as: :date, html5: true %>
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
  <% end %>

  <div class="row d-flex justify-content-center">

    <div class="col-sm-10">

      <div class="card-show mt-3 d-flex justify-content-center">

        <div class="text-center animate__animated animate__bounce">
          <h3>All Your Posts</h3>
          <div class="d-flex align-items-center flex-column-reverse mt-3">
            <% current_user.weights.each do |weight| %>
              <%= render "profiles/card", weight: weight %>
            <% end %>
          </div>
        </div>

      </div>

    </div>

  </div>

</div>
